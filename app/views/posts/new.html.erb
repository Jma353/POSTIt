<div class="page-header col-sm-10 col-sm-offset-1">
	<h1><strong>New Post</strong></h1>
</div>

<div class="col-sm-offset-1 col-sm-10" id="postForm">
	<%= render 'shared/error_messages' %> 
	<%= form_for @post do |f| %> 
		<div class="form-group col-sm-4">
    	<%= f.label :postName %> 
    	<%= f.text_field :postName, class: "form-control" %> 
  	</div> 
  	<div class="form-group col-sm-10">
    	<%= f.label :content %> 
    	<%= f.text_area :content, class: "form-control", id: "largeInput" %>
    </div>
  	<div class="form-group col-sm-4">
  		<%= f.label :poster %> 
  		<%= f.text_field :poster, class: "form-control" %>
  	</div>
  	<div class="col-sm-12">
  		<%= f.submit "Submit", class: "btn btn-success" %> 
		</div>
	<% end %>
</div>